<%= form_for [current_user, Item.new], class: "form-horizontal" do |f| %>
  <div class="form-group">
    <br><br>
    <%= f.label :name, 'Add task below', class: "col-sm-1 control-label" %>
    <div class="col-sm-5">
      <%= f.text_field :name, class: "form-control"  %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>

<% end %>
